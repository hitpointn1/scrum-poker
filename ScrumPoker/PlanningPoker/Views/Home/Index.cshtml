@{
    ViewData["Title"] = "Home";
}
<div class="text-center">
    <h2>Покер Планирования</h2>
</div>
<style>
    .SignForm {
        float: left;
        width: 400px;
        height: 425px;
        border: 1px solid;
        border-color: cadetblue;
        background-color: aliceblue;
        text-align: center;
        margin-bottom: 50px;
    }
</style>
<br />
<div style="overflow:hidden; object-position:center; " class="col-auto">

    <div style="width: 100%; margin-left: 125px;">

        <div class="SignForm">

            <form asp-action="RoomCreate" asp-controller="Home" asp-antiforgery="true" method="post">
                <br />

                <h4 style="margin-bottom: 10px;">
                    Создание комнаты
                </h4>

                <div style="margin-bottom: 15px;">
                    @Html.Label("Имя")
                    <br />
                    @Html.TextBox("Name")
                </div>

                <div style="margin-bottom: 15px;">
                    @Html.Label("Название комнаты")
                    <br />
                    @Html.TextBox("RoomTitle")
                </div>

                <div style="margin-bottom: 15px;">
                    @Html.Label("Пароль")
                    <br />
                    @Html.TextBox("Password")
                </div>

                <div style="margin-bottom: 20px;">
                    @Html.Label("Тип карт")
                    <br />
                    <select name="CardsType" style="font-size:12px;">
                        <option value=1>1,2,3,5,8,13,20,40,100,∞,?,CC</option>
                        <option value=2>1,2,3,5,8,13,20,40,?</option>
                        <option value=3>XS,S,M,L,XL,XXL,?</option>
                        <option value=4>1,2,5,10,20,50,100</option>
                    </select>
                </div>

                <input type="submit" value="Создать"/>
                
            </form>
        </div>

        <div style="float:left; width: 65px; height: 100px;"></div>

        <div class="SignForm">

            <form asp-action="RoomJoin" asp-controller="Home" asp-antiforgery="true" method="post">
                <br />

                <h4 style="margin-bottom: 40px;">
                    Присоединение к комнате
                </h4>

                <div style="margin-bottom: 25px;">
                    @Html.Label("Имя")
                    <p>
                        @Html.TextBox("Name")
                    </p>
                </div>

                <div style="margin-bottom: 25px;">

                    @Html.Label("Id комнаты")
                    <p>
                        @Html.TextBox("RoomId")
                    </p>
                </div>

                <div style="margin-bottom: 15px;">
                    @Html.Label("Пароль")
                    <p>
                        @Html.TextBox("Password")
                    </p>
                </div>

                <br />

                <input type="submit" value="Присоедниться"/>
                </form>
        </div>
    </div>
</div>