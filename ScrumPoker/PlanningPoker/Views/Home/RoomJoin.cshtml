@model PlanningPoker.Models.JoinModel
@{
    ViewData["Title"] = "RoomJoin";
}
<style>
    .JoinForm {
        border-radius: 1em;
        padding: 1em;
        position: absolute;
        top: 40%;
        left: 50%;
        width: 400px;
        height: 450px;
        margin-right: -50%;
        transform: translate(-50%, -50%);
        border: 1px solid;
        border-color: cadetblue;
        background-color: aliceblue;
        text-align: center;
        margin-bottom: 50px;
    }
  </style>
<div class="JoinForm">
    <h4>Присоединение к комнате</h4>

    <form asp-action="RoomJoin" asp-controller="Home" asp-antiforgery="true" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <br />

            <div style="margin-bottom: 25px;">
                <label asp-for="Name"></label>
                <br />
                <input type="text" asp-for="Name" />
                <p><span asp-validation-for="Name" class="text-danger"></span></p>
            </div>

            <div style="margin-bottom: 25px;">
                <label asp-for="RoomId"></label>
                <br />
                <input type="number" asp-for="RoomId"/>
                <p><span asp-validation-for="RoomId" class="text-danger"></span></p>
            </div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Password"></label>
                <br />
                <input type="password" asp-for="Password" />
                <p><span asp-validation-for="Password" class="text-danger"></span></p>
            </div>

            <br />

            <input type="submit" value="Присоедниться" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}